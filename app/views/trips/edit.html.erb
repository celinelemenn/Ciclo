<div class="form-container flex-center-col">
  <div class="form-title">
    <h1 class="ml-2 mt-2">Edit your trip</h1>
  </div>

<%= simple_form_for(@trip) do |f| %>
  <div class="form-input">
    <%= cl_image_tag(@trip.photo.url(:thumnail)) %>
    <%= f.input :photo,  label: "Change your picture"  %>

    <hr class="line-divider my-4">

     <br>
    <%= f.input :name, label: "Title"%>
    <br>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <br>

    <hr class="line-divider my-4">

   <%= f.input :country_code, priority: ["FR", "DE","NL", "NO","GB", "US"], prompt: "Select a Country", label: false, include_blank: true %>
    <p class="grey-text font-14">and / or </p>
    <div class="form-group">
    <%= f.input :cycling_route, collection: Trip::CYCLING_ROUTES, prompt: "Select a Cycling Route", label: false, include_blank: true %>
    </div>
    <hr class="line-divider my-4">
    <%= f.input :description, label: "Description ", placeholder: "Tell other cicloo-ers the highlights ..."%>
    <%= f.input :km, label: "Kilometers achieved / planned ", placeholder: "1500"%>
    <%= f.input :blog,  label: "Blog of this trip", placeholder: "www.ciclo-app.com"  %>




  </div>
  <div class="form-buttons mb-50">
    <%=f.submit "Update", class: "btn-main" %>
    <%= link_to 'Delete', trip_path(@trip), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn-secondary' %>
  </div>
<% end %>
</div>
