<div>
  <p>Chatting with <%= conversation.with(current_user).name %></p>
  <br>
  <p>
    <% if conversation.personal_messages.size.positive? %>
      <em>
        <%= conversation.personal_messages.last.body.truncate(50) %>
      </em>
    <% end %>
  </p>
  <br>
  <%= link_to 'View conversation', conversation_path(conversation) %>
  <hr>
</div>
