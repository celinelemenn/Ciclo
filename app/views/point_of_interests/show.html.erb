<h1>PointOfInterests#show</h1>

<!-- image block -->

<div>
  <%= cl_image_tag @poi.photo %>

  <div>
    <i class="far fa-thumbs-down"></i>
  </div>

  <div>
    <i class="fas fa-thumbs-up"></i>
  </div>
</div>

<!-- top details -->

<div>
  <div>
    <h1> <%= @poi.title %></h1>
  </div>

  <div class="d-flex ">
    <i class="fas fa-tint"></i>
    <div><%= @poi.poi_type %></div>
  </div>

  <div>
    Created by <%= @poi.user.full_name %>, <%= @date %>
  </div>
</div>
<!-- description block -->

<div>
  <h3>Description</h3>
  <p><%= @poi.description %></p>
</div>

<div id="comments">
  <% @poi.comments.each do |comment| %>
    <h2><%= comment.user.full_name %></h2>
    <p><%= comment.content %></p>
  <% end %>
</div>


<!-- comments block -->
<h1>Add a comment <%= @poi.title %></h1>

<div id="new_comment">
  <%= simple_form_for([@poi,@comment]) do |f| %>
    <%= f.input :content %>
    <%= f.input :user, :as => :hidden, input_html: { value: current_user.id } %>
    <%= f.submit "Add comment" %>
  <% end %>
</div>

<div>
  <button>Something wrong ?</button>
</div>
