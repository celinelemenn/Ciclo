<h1 class="mt-5 ml-3">Edit your contribution</h1>


<div class="form-bottom ">
  <%= simple_form_for(@poi) do |f|%>
  <div class="form-inputs">
    <%= f.input :photo %>
    <%= f.input :poi_type, collection: POINT_OF_INTEREST %>
    <%= f.input :title %>
    <%= f.input :description %>
  </div>
  <div class="form-actions d-flex">
  <%= f.button :submit, "Update", class: "btn-main" %>
  <%= link_to 'Delete', point_of_interest_path(@poi), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn-secondary' %>
  </div>
  <% end %>
</div>
