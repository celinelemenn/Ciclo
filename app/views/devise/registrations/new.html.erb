<div class="form-container">
  <div class="form-top">
    <div class="form-title">
      <h2 class="uni-text-shadow"><%= t('devise.registrations.new.headline') %></h2>
      <hr>
    </div>
  </div>

    <div class="form-bottom sign-up">
<!--
      <%= link_to user_facebook_omniauth_authorize_path do%>
        <div class="facebook-btn mt-3">
        <i class="fab fa-facebook-f"> </i>
        <p>Sign up with Facebook</p>
        </div>
      <% end %>

      <div class="d-flex my-5">
        <hr class="line-divider mt-3">
        <p class="grey-text">or</p>
        <hr class="line-divider mt-3">
      </div>
-->

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-input">
          <%= f.input :full_name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: t('devise.form.username') },
                      label: t('devise.form.username') %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: t('devise.form.email') },
                      label: t('devise.form.email')%>
          <%= f.input :password,
                      required: true,
                      hint: (t('devise.form.character_minimum', number: @minimum_password_length) if @minimum_password_length),
                      input_html: { autocomplete: t('devise.form.password') },
                      label: t('devise.form.password') %>
        </div>

        <div class="form-buttons flex-column align-items-center">
          <%= f.button :submit, t('devise.registrations.new.sign_up'), class: "btn-main" %>
       <!--    <p class="mt-3" style="color:#6c757d; font-size:14px"> By signing up you agree to our <%= link_to 'Terms of services', terms_path, class: 'btn-link-blue'%></p> -->
          <hr class="line-divider mt-3">
          <p class="mt-2 grey-text">
            <%= t('devise.registrations.new.go_to_sign_in.message') %>  <%= render "devise/shared/links" %>
          </p>
        </div>
      <% end %>
    </div>
</div>
