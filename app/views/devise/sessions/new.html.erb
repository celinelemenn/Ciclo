<div class="form-container">
  <div class="form-top">
    <div class="form-title">
      <h2 class="uni-text-shadow">Log in</h2>
      <hr>
    </div>
  </div>
    <div class="form-bottom">

       <%= link_to user_facebook_omniauth_authorize_path do%>
        <div class="facebook-btn mt-3">
        <i class="fab fa-facebook-f"> </i>
        <p>Log in with Facebook</p>
        </div>
      <% end %>

      <div class="d-flex my-5">
        <hr class="line-divider mt-3">
        <p class="grey-text">or</p>
        <hr class="line-divider mt-3">
      </div>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-input">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-buttons-login">
          <%= f.button :submit, "Log in", class: "btn-main" %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn-minimal" %>
          <% end %>
          <hr class="line-divider mt-3">

          <p class="mt-2" style="color:#6c757d"> Don't have a Cicloo account ?  <%= render "devise/shared/links" %></p>
        </div>
      <% end %>
    </div>
</div>
