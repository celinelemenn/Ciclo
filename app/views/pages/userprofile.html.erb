<% if @user.photo.file %>
  <p>it's true</p>
  <%= cl_image_tag @user.photo.url(:avatar) %>
<% else %>
  <img src="https://articles-images.sftcdn.net/wp-content/uploads/sites/3/2016/01/wallpaper-for-facebook-profile-photo.jpg" alt="Image not found" class="avatar-large">
<% end %>
<h3><%= @user.full_name  %></h3>
<p><%= @user.bio  %><p>
<p><%= @user.description  %><p>
<p><%= @user.blog %><p>

<p> _______________________ <p>

<h3>Past trips</h3>
<% @trips.each do |trip| %>
  <p><%= (trip.start_date.to_date..trip.end_date.to_date).to_a.size %></p>
  <p><%= trip.name %></p>
  <p><%= trip.km %></p>
  <p><%= trip.blog %></p>
<% end %>
