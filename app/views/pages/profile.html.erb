<div class="uni-page-container text-center p-3">

<% if current_user.present? %>
  <% if current_user.photo.file %>
    <%= cl_image_tag(current_user.photo.url(:avatar), fetch_format: :auto) %>
  <% else %>
    <img src="https://articles-images.sftcdn.net/wp-content/uploads/sites/3/2016/01/wallpaper-for-facebook-profile-photo.jpg" alt="Image not found" class="avatar-large">
  <% end %>
<div class="info-card">
  <strong><h5><%= current_user.full_name.capitalize  %></h5></strong>
  <p><%= current_user.bio  %></p>
  <p><%= current_user.description %><p>
  <h6><%= current_user.blog  %></h6>
<% end %>
</div>

<div class="mt-3">
  <i class="fas fa-pen pr-2"></i><%= link_to 'Edit', edit_user_registration_path, class: "btn-simple"%>
</div>


  <div class="parent-card">
    <div class="card-trip-header mt-80"><h3>Your trips </h3></div>
    <% if @trips.empty? %>
      <p class="uni-opacity40 my-4"> When you add trips, you will see them here </p>
    <% else %>
      <% @trips.each do |trip| %>
        <%= link_to edit_trip_path(trip) do %>
          <div class="card-trip mb-3" style="background: linear-gradient(-225deg, rgba(30,30,30,0.4) 30%, rgba(46,46,46,0.5) 80%),url(<%= cl_image_path(trip.photo_url(:low)) %>) ; background-size: cover; background-repeat: no-repeat; background-position: center center;">
            <% if trip.end_date.nil?  || trip.end_date > Date.today %>
              <p class="travelling-tag">Now travelling</p>
            <% end %>
            <strong><h3><%= trip.name %></h3></strong>
            <div class="container-card">
              <div>
                <p><strong><%= trip.start_date.year %></strong></p>
                <font size="1"><p><%= trip.start_date.strftime("%B") %></p></font>
              </div>
              <div>
                <p><strong><%= trip.trip_time(trip.start_date, trip.end_date) %> </strong></p>
                <font size="1"><p>days</p></font>
              </div>
              <div>
                <% unless trip.km.nil? %>
                  <p><strong><%= trip.km %> </strong></p>
                  <font size="1"><p>kilometers</p></font>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
    <div class="card-trip-btn d-flex justify-content-center mt-3 mb-5">
      <%= link_to 'Add trip', new_trip_path, class: "btn-secondary" %>

    </div>
  </div>
</div>
<%= render 'shared/navbar' %>
