<div class="banner text-center">
  <div class="banner-title">
    <h1>Cycle better</h1>
    <p><span id="banner-typed-text"></span></p>
    <!-- <hr> -->
  </div>
  <div class="banner-buttons">
    <%= link_to "Discover Ciclo", map_path, class: "btn-main uni-box-shadow"  %>
